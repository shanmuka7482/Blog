<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The secret Book Club</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <%- include("partials/header.ejs") %>
    <div class="body">
      <div class="blog">
        <% if (locals.sets && locals.sets.length > 0) { %>
          <% locals.sets.forEach(set => { %>
            <div class="Title">
              <h2><%= set[0] %></h2>
            </div>
            <div class="Content">
              <p><%= set[1] %></p><br>
            </div>
          <% }); %>
        <% } else { %>
          <h1>Your Blog is Coming Soon</h1>
        <% } %>               
      </div>
      <div class="sideImg">
        <img src="sideImg.jpg" alt="sideImg" />
      </div>
    </div>

    <%- include("partials/footer.ejs") %>
  </body>
</html>
